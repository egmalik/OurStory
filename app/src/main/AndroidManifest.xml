<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tsofen.ourstory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CommentActivity"></activity>
        <activity android:name=".UserModel.AppHomePage" />
        <activity android:name=".UserModel.LogIn" />
        <activity android:name=".UserModel.RegistrationPage1" />
        <activity android:name=".UserModel.RegistrationPage2" />
        <activity
            android:name=".StoryTeam.CreateStory"
            android:label="CreateStory"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".StoryTeam.ViewStory" />
        <activity android:name=".MyMemoriesActivity" />
        <activity android:name=".EditCreateMemory.CreateEditMemoryActivity" />
        <activity android:name=".TeamsHomePage.TeamsHomePg">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MemoriesOfStoryActivity"
            android:label="Memories"
            android:parentActivityName=".YearActivity" />
        <activity android:name=".YearActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="org.tsofen.ourstory.YearActivity" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>